	"devDependencies": {
		"@babel/core": "^7.19.1",
		"@babel/preset-env": "^7.19.1",
		"babel-loader": "^8.2.5",
		"browser-sync": "^2.27.10",
		"browser-sync-webpack-plugin": "^2.3.0",
		"copyfiles": "^2.4.1",
		"css-loader": "^6.7.1",
		"html-webpack-plugin": "^5.5.0",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"sass": "^1.54.9",
		"sass-loader": "^13.0.2",
